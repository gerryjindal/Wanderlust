<% if(success&&success.length>0){ %>
<div class="alert alert-success alert-dismissable col-6 offset-3 d-flex justify-content-between align-items-center" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div> <% } %>
<% if(error&&error.length>0){ %>
    <div class="alert alert-danger alert-dismissable col-6 offset-3 d-flex justify-content-between align-items-center" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div> <% } %>